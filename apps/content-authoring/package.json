{
  "name": "content-authoring",
  "productName": "content-authoring",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "clean": "rimraf dist && rimraf ../.parcel-cache",
    "prebuild": "npm run clean",
    "build": "parcel build --no-cache",
    "start:frontend": "parcel serve --target frontend --no-cache --port 5001",
    "prestart:backend": "parcel build --target backend --target preload --no-cache",
    "start:backend": "wait-on http://localhost:5001 && nodemon --exec electron ./dist/main.js",
    "watch:backend": "parcel watch --target backend --target preload --no-cache --port 5000",
    "prestart": "npm run clean",
    "start": "cross-env NODE_ENV=development PORT=5001 concurrently \"npm run start:frontend\" \"npm run start:backend\" \"npm run watch:backend\""
  },
  "backend": "dist/main.js",
  "preload": "dist/preload.js",
  "frontend": "dist/renderer.html",
  "targets": {
    "backend": {
      "context": "electron-main",
      "source": "./src/main/index.ts",
      "outputFormat": "commonjs",
      "engines": {
        "node": "16.13.2"
      }
    },
    "preload": {
      "context": "electron-main",
      "source": "./src/main/preload.ts",
      "outputFormat": "commonjs",
      "engines": {
        "node": "16.13.2"
      }
    },
    "frontend": {
      "context": "browser",
      "source": "./src/renderer/index.html"
    }
  },
  "keywords": [],
  "author": {
    "name": "aubeOSG",
    "email": "caube@osg.ca"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aubeOSG/git-actions-check.git",
    "directory": "apps/content-authoring"
  },
  "bugs": {
    "url": "https://github.com/aubeOSG/git-actions-check/issues"
  },
  "homepage": "https://github.com/aubeOSG/git-actions-check/apps/content-authoring#readme",
  "dependencies": {
    "electron-debug": "^3.2.0",
    "electron-squirrel-startup": "^1.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-router-dom": "^6.3.0",
    "typescript": "^4.6.3"
  },
  "devDependencies": {
    "@parcel/packager-ts": "^2.4.1",
    "@parcel/runtime-react-refresh": "^2.4.1",
    "@parcel/transformer-sass": "^2.4.1",
    "@parcel/transformer-typescript-types": "^2.4.1",
    "@types/node": "^17.0.23",
    "@types/react": "^17.0.43",
    "@types/react-dom": "^17.0.14",
    "concurrently": "^7.1.0",
    "cross-env": "^7.0.3",
    "electron": "18.0.1",
    "electron-builder": "^22.14.13",
    "electron-devtools-installer": "^3.2.0",
    "electron-notarize": "^1.2.1",
    "electron-reload": "^2.0.0-alpha.1",
    "nodemon": "^2.0.15",
    "parcel": "^2.4.1",
    "postcss": "^8.4.12",
    "postcss-import": "^14.1.0",
    "postcss-modules": "^4.3.1",
    "rimraf": "^3.0.2",
    "wait-on": "^6.0.1"
  },
  "build": {
    "productName": "Scrowl",
    "appId": "org.EEBOS.scrowl",
    "asar": true,
    "asarUnpack": "**\\*.{node,dll}",
    "files": [
      "dist",
      "node_modules",
      "package.json"
    ],
    "afterSign": "scripts/pipeline/notarize.js",
    "mac": {
      "target": {
        "target": "default",
        "arch": [
          "x64"
        ]
      },
      "type": "distribution",
      "hardenedRuntime": true
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "directories": {
      "app": "release/app",
      "output": "release/build"
    },
    "publish": {
      "provider": "github",
      "owner": "aubeOSG",
      "repo": "git-actions-check"
    }
  }
}
